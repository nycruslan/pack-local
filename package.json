{
  "name": "pack-local",
  "version": "1.0.0-beta.3",
  "type": "module",
  "description": "A CLI tool for locally packing component libraries",
  "author": "Ruslan Shulga <nycruslan@gmail.com>",
  "license": "ISC",
  "keywords": [
    "CLI",
    "local packing",
    "component libraries",
